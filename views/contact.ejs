<%- include('./includes/head.ejs') %>

<body class="background-image">
  <%- include('./includes/navigation.ejs') %>
  <div class="row container">
    <div class="col-5 mx-auto" style="text-align: center;">
      <h1>Contact Us</h1>
      <form action="/contact" method="POST" class="">
        <div class="form-group input-group-lg">
          <input type="text" name="name" value="name" class="form-control" placeholder="Your Name">
        </div>
        <div class="form-group input-group-lg">
          <input type="email" name="email" value="email" class="form-control" placeholder="Email Address">
        </div>
        <div class="form-group input-group-lg">
          <textarea name="message" value="message" class="form-control" placeholder="Message"></textarea>
        </div>
        <div class="form-check mb-2">
          <input type="checkbox" name="opt-in" id="opt-in" class="form-check-input">
          <label for="opt-in" class="form-check-label">Opt In to receive messages from us!</label>
        </div>
        <div class="form-group">
          <input class="btn btn-primary" type="submit" value="Send Message">
        </div>
      </form>
    </div>
  </div>
  <%- include('./includes/footer.ejs') %>
</body>
